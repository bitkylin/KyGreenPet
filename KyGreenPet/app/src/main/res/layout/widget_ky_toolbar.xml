<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    >

  <ImageView
      android:id="@+id/kytoolbar_navigation"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="center_vertical"
      android:paddingLeft="6dp"
      android:paddingRight="6dp"
      android:src="@mipmap/icon_toolbar_arrow_left"
      android:visibility="invisible"
      />

  <TextView
      android:id="@+id/kytoolbar_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:gravity="center"
      android:text="标题"
      android:textColor="@color/white"
      android:textSize="20sp"
      />
  <TextView
      android:id="@+id/kytoolbar_rightTextView"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="bottom"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:text=""
      android:textColor="@color/white"
      android:textSize="18sp"
      android:visibility="gone"
      />

  <ImageView
      android:id="@+id/kytoolbar_rightButton"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:src="@mipmap/icon_toolbar_plus"
      android:visibility="gone"
      />

  <TextView
      android:id="@+id/kytoolbar_placeholder"
      android:layout_width="50dp"
      android:layout_height="match_parent"
      />

</LinearLayout>
